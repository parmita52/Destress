<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorPurple</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorGreen</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MicButton">
        <item name="android:layout_width">350px</item>
        <item name="android:layout_height">350px</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@drawable/mic_button</item>
    </style>

    <style name="NotificationButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorGreen</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Gifs">
        <item name="android:layout_margin">100dp</item>
        <item name="android:layout_gravity">center</item>
        <!--<item name="android:adjustViewBounds">true</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:scaleType">fitXY</item>-->
    </style>

    <style name="BodyContent">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainActivityShortcuts">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
